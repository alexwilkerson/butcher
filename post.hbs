{{!< default}}
{{> header}}

<main class="main_butcher" role="main">

{{#post}}

  <article class="article_butcher" role="article" itemscope itemtype="http://schema.org/Article">
  <header class="postheader_butcher">
  <img class="postimage_butcher" src="{{image}}" alt="{{title}}">
  <h1 class="posttitle_butcher" itemprop"headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a> &bull;
  <time class="date_butcher" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='ddd DD MMM YYYY'}}</time></h1>
  </header>

  <div class="postcontent_butcher" itemprop="articleBody">
  {{content}}
  </div>

  {{#if author}}
  <footer class="postfooter_butcher">
  <address itemscope itemtype="http://schema.org/Person">
    {{#if author.image}}
      <div class="authorimage_butcher"><img src="{{author.image}}" itemprop="image"></div>
    {{/if}}
      <span itemprop="author">author: {{author.name}}</span>
    {{#if author.website}}
      <div class="authorwebsite_butcher"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
    {{/if}}
  </address>
  <div class="authorbio_butcher">
   <p>{{author.bio}}</p>
  </div>
  </footer>
  {{/if}}
 

  {{#if tags}}
  <div class="posttags_butcher">
  tags: {{tags separator=" | "}}
  {{/if}}

  <div class="sharepost_butcher">
    share:
    <a class="share_butcher icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_butcher">tw</span></a>
    <a class="share_butcher icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_butcher">fb</span></a>
    <a class="share_butcher icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_butcher">g+</span></a>
  </div>

  </article>
{{/post}}

{{#if pagination}}
  <div class="pagination_butcher">
    {{{pagination}}}
  </div>
{{/if}}

</main>

{{> footer}}
